<h2>Using Rest Service</h2>

<div ng-app="app" ng-controller="dataController">
  <table>
    <tr>
      <th>login</th>
      <th>type</th>
      <th>dbkey</th>
      <th>currentVersion</th>
    </tr>
    <tr ng-repeat="record in allRecords">
      <td><a href="#record/{{record.name}}">{{record.login}}</a></td>
      <td>{{record.id}}</td>
      <td>{{record.mail}}</td>
      <td>{{record.firstname}}</td>
    </tr>
  </table>

  {{recorddata.name}}

  <div ng-view></div>
</div>

